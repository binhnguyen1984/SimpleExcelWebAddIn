{
  "compilerOptions": {
    "noImplicitAny": false,
    //    "noEmitOnError": true,
    "removeComments": false,

    "alwaysStrict": true,
    //"declaration": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015.promise"
    ],
    "types": [
      "office-js",
      "jquery"
    ],
    "allowJs": true,
    "target": "es5",
    "module": "commonjs", //commonjs
    "moduleResolution": "node",
    "sourceMap": true
  },

  "include": [ "./wwwroot/ExcelAddIn/*" ],

  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}